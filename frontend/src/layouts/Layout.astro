---
import { NextUIProvider } from "@nextui-org/react";
import { Navbar } from '../components/react/navbar.jsx';

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="m-20 relative min-h-screen">
    <div class="absolute inset-0 -z-10">
      <div class="relative h-full w-full bg-black">
        <div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]">
        </div>
      </div>
    </div>
    <NextUIProvider>
      <Navbar />
      <main>
        <slot />
      </main>
    </NextUIProvider>
  </body>
</html>
